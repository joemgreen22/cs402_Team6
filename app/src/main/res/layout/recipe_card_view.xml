<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_side"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/recipe_card_background"
            android:padding="5dp">

            <TextView
                android:id="@+id/back_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".23"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:text="Back View Things Changed"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".77"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/back_recipe_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".69"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:text="@string/description"
                    android:textColor="#FF000000"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:background="@drawable/recipe_card_description_background"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".02" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".29"
                    app:cardBackgroundColor="#88FFFFFF"
                    app:cardCornerRadius="@dimen/recipe_card_content_round_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/back_recipe_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/default_recipe_image_desc"
                        android:gravity="center"
                        app:srcCompat="@drawable/def_recipe_image" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/front_side"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/recipe_card_background"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/front_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".23"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:text="@string/recipe_title"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".77"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/front_recipe_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".69"
                    android:background="@drawable/recipe_card_description_background"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/description"
                    android:textColor="#FF000000"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".02" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".29"
                    app:cardBackgroundColor="#88FFFFFF"
                    app:cardCornerRadius="@dimen/recipe_card_content_round_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/front_recipe_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/default_recipe_image_desc"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/def_recipe_image" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>